[loggers]
keys=root

[formatters]
keys=simple,complex

[formatter_simple]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s

[formatter_complex]
format=%(asctime)s: %(name)s %(funcName)20s() [%(levelname)s]: %(message)s

[handlers]
keys=file,info_file,screen

[handler_file]
class=handlers.RotatingFileHandler
backupCount=50
formatter=complex
level=DEBUG
args=('/tmp/Hyperion/log/debug.log', 'w')

[handler_info_file]
class=handlers.RotatingFileHandler
backupCount=5
formatter=simple
level=INFO
args=('/tmp/Hyperion/log/info.log', 'w')

[handler_screen]
class=StreamHandler
formatter=complex
level=DEBUG
args=(sys.stdout,)

[logger_root]
level=DEBUG
handlers=screen,file,info_file